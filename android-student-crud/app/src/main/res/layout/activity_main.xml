<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sistem Manajemen Data Mahasiswa"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnMahasiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelola Data Mahasiswa"
            android:layout_marginBottom="12dp"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:id="@+id/btnJurusan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelola Data Jurusan"
            android:layout_marginBottom="12dp"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:id="@+id/btnMataKuliah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelola Data Mata Kuliah"
            android:layout_marginBottom="12dp"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:id="@+id/btnNilai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelola Data Nilai"
            android:layout_marginBottom="12dp"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:id="@+id/btnDosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelola Data Dosen"
            android:layout_marginBottom="12dp"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp"
            style="@style/Widget.AppCompat.Button.Colored" />

    </LinearLayout>

</LinearLayout>