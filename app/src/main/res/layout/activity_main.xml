<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_grey">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJurusan"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:text="@string/btn_jurusan"
                android:textSize="16sp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="start"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDosen"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:text="@string/btn_dosen"
                android:textSize="16sp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="start"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:text="@string/btn_mahasiswa"
                android:textSize="16sp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="start"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMataKuliah"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:text="@string/btn_mata_kuliah"
                android:textSize="16sp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="start"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNilai"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:text="@string/btn_nilai"
                android:textSize="16sp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="start"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>